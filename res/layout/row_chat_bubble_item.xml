<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.digitalforce.datingapp"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:padding="5dp"
            android:id="@+id/left_chat_layout"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <com.digitalforce.datingapp.widgets.RoundedImageView
                android:layout_weight="0"
                android:id="@+id/left_img_member"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:contentDescription="@null"
                android:src="@drawable/farhan"
                app:border="true"
                app:border_color="@color/white"
                app:border_width="1dp"
                app:shadow="true" />

        <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="8dp"
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_weight="1"
                        android:id="@+id/left_user_name"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/chat_user_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/left_chat_time"
                        android:layout_weight="0"
                        android:textSize="12sp"
                        android:textColor="@color/chat_user_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                    android:paddingTop="5dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/left_txtv_chat_msg"
                    android:textColor="@color/chat_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <ImageView android:id="@+id/left_imgv_chat_img"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>

         </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:padding="5dp"
            android:id="@+id/right_chat_layout"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_weight="1"
                        android:id="@+id/right_user_name"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/chat_user_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/right_chat_time"
                        android:textSize="12sp"
                        android:textColor="@color/chat_user_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                    android:paddingTop="5dp"
                    android:textColor="@color/chat_text_color"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/right_txtv_chat_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <ImageView android:id="@+id/right_imgv_chat_img"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>

        </LinearLayout>
        <com.digitalforce.datingapp.widgets.RoundedImageView
                android:layout_weight="0"
                android:id="@+id/right_img_member"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:contentDescription="@null"
                android:src="@drawable/farhan"
                app:border="true"
                app:border_color="@color/white"
                app:border_width="1dp"
                app:shadow="true" />

    </LinearLayout>

</LinearLayout>